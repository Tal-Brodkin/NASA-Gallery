<%- include('head.ejs') %>

<body class="bg-light">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">
            <div class="card m-2">
                <div class="card-top p-4">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <img src="./images/nasa_logo.jpg" class="img-fluid" alt="not a space agency">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-auto pt-4">
                            <h4>Welcome to NASA - Not A Space Agency</h4>
                        </div>
                    </div>
                </div>


                <div class="card-body">
                    <div style="text-align: center;" class="mb-4">
                        <h4>Please choose a password</h4>
                    </div>
                    <form id="password-register" action="/register-password" method="post">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" placeholder="name@example.com" name="password">
                            <label for="password">Password</label>
                            <div class="invalid-feedback">Password to short</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password2" placeholder="Password">
                            <label for="password2">Confirm password</label>
                            <div class="invalid-feedback">Password doesnt match</div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-auto">
                                <a class="btn btn-secondary" href="/register" role="button">Back</a>
                                <button class="btn btn-primary" type="submit">Register</button>
                            </div>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </div>

</div>


<script src="/javascripts/register-password.js"></script>
</body>
</html>